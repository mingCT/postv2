<%= render 'shared/content_lead', header: 'Add a new Post' %>


 <%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
Title:<br>
<%= f.text_field :title %><br>
URL:<br>
<%= f.text_field :url %><br>
Body:<br>
<%= f.text_area :body, rows: 5 %><br>
Categories: <br>
<%= f.select :category_ids, Category.all.collect{|c| [c.title, c.id]}, {}, {multiple: 'multiple'} %>
<br>

<%= f.submit class: "btn btn-primary" %><br>


<% end %>