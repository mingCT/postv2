<%= render 'shared/content_lead', header: 'Add a new Post' %>


 <%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
Title:<br>
<%= f.text_field :title %><br>
URL:<br>
<%= f.text_field :url %><br>
Body:<br>
<%= f.text_area :body, rows: 5 %><br>


	<p>Categories </p>
	<% @cats.each do |c| %>
		<p><%= check_box_tag 'post[category_ids][]', c.id, @post.categories.include?(c) %>
		<%= c.title %></p>
	<% end %>

<%= f.submit class: "btn btn-primary" %><br>


<% end %>