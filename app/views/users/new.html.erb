<%= render 'shared/content_lead', header: 'Register' %>

<%= form_for @user do |f| %>
	<div class ='control-group'>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>
	<div class='control-group'>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<%= f.submit "Regsiter", class: 'btn btn-success' %>

	<% end %>